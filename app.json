{
  "expo": {
    "name": "Personal Diary",
    "slug": "personal-diary-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.personaldiary.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow Personal Diary to use Face ID for secure authentication",
        "NSLocationWhenInUseUsageDescription": "Allow Personal Diary to access your location to tag diary entries",
        "NSPhotoLibraryUsageDescription": "Allow Personal Diary to access your photos to add to diary entries",
        "NSCameraUsageDescription": "Allow Personal Diary to use the camera to capture photos for diary entries",
        "NSMicrophoneUsageDescription": "Allow Personal Diary to record voice notes for diary entries"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.personaldiary.app",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-local-authentication",
      "expo-location"
    ]
  }
}
